{
  "name": "bitcann",
  "version": "0.0.1",
  "description": "BitCANN - Bitcoin Cash for Assigned Names and Numbers is a decentralized domain name and identity system built on the Bitcoin Cash Blockchain.",
  "types": "./build/lib/index.d.ts",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./build/lib/index.js",
    "./client": "./build/lib/client.js"
  },
  "browser": "build/lib/index.js",
  "scripts": {
    "build": "tsc",
    "docs": "typedoc --hideGenerator --categorizeByGroup",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "clean": "rm -rf build",
    "prepare": "npm run build",
    "jest": "NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "lint": "eslint . --ext .ts",
    "syntax": "tsc --noEmit",
    "example": "NODE_OPTIONS='--loader ts-node/esm' node examples/network-example.ts",
    "compile:registry": "cashc ./lib/contracts/Registry.cash -o ./lib/contracts/Registry.json",
    "compile:domain": "cashc ./lib/contracts/Domain.cash -o ./lib/contracts/Domain.json",
    "compile:auction": "cashc ./lib/contracts/Auction.cash -o ./lib/contracts/Auction.json",
    "compile:bid": "cashc ./lib/contracts/Bid.cash -o ./lib/contracts/Bid.json",
    "compile:domainfactory": "cashc ./lib/contracts/DomainFactory.cash -o ./lib/contracts/DomainFactory.json",
    "compile:auctionnameenforcer": "cashc ./lib/contracts/AuctionNameEnforcer.cash -o ./lib/contracts/AuctionNameEnforcer.json",
    "compile:domainownershipguard": "cashc ./lib/contracts/DomainOwnershipGuard.cash -o ./lib/contracts/DomainOwnershipGuard.json",
    "compile:auctionconflictresolver": "cashc ./lib/contracts/AuctionConflictResolver.cash -o ./lib/contracts/AuctionConflictResolver.json",
    "compile:accumulator": "cashc ./lib/contracts/Accumulator.cash -o ./lib/contracts/Accumulator.json",
    "compile": "npm run compile:registry && npm run compile:auction && npm run compile:bid && npm run compile:domainfactory && npm run compile:auctionnameenforcer && npm run compile:domainownershipguard && npm run compile:auctionconflictresolver && npm run compile:accumulator && npm run compile:domain"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BitCANN/bitcann.js.git"
  },
  "keywords": [
    "bitcoin cash",
    "BCH",
    "smart contracts"
  ],
  "author": "Kuldeep Singh <kuldeepbb.grewal@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BitCANN/bitcann.js/issues"
  },
  "homepage": "https://github.com/BitCANN/bitcann.js#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.9",
    "typedoc-plugin-coverage": "^3.4.1",
    "typescript": "^5.5.3",
    "cashc": "^0.11.0-next.3"
  },
  "dependencies": {
    "@bitauth/libauth": "^3.1.0-next.4",
    "cashscript": "^0.11.0-next.3",
    "electrum-cash": "^3.2.0"
  }
}
